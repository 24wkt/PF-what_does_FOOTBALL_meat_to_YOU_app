<div class="col-lg-12">
  <%= form_with model: blog, local: true do |f| %>
    <div class="form-group">
      <%= f.label :blog_image %>
      <%= f.attachment_field :blog_image %>
    </div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <%= f.submit "Create!!", class: "btn btn-sm btn-success" %>
      </div>
  <% end %>
</div>
<!-- エンドユーザー側のトップページ -->
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= render 'layouts/header' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="public-image"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <h3>New Blogs</h3>
        <%= render 'render/blogs_index', blogs: @blogs %>
    </div>
    <div class="col-sm-3">
      <%= render 'render/sidebar', end_user: @end_user, tags: @tags %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 text-center">
      <%= render 'layouts/footer' %>
    </div>
  </div>
</div>

<!-- エンドユーザー側のフォロワー一覧 -->
<div class="container">
  <div class="row">
    <%= render 'layouts/header' %>
  </div>
  <div class="row">
    <h3>Followers Users</h3>
    <div class="col-sm-12">
      <table class="table table-hover table-bordered">
        <% if @end_users.exists? %>
          <thead>
            <tr>
              <th></th>
              <th>User Name</th>
              <th colspan="3">introduction</th>
            </tr>
          </thead>
          <tbody>
            <% @end_users.each do |end_user| %>
              <tr>
                <td><%= attachment_image_tag(end_user, :profile_image, size: '60x60', fallback: "no-image-icon.jpg") %></td>
                <td><%= link_to end_user.name, end_user_path(end_user) %></td>
                <td><%= end_user.introduction %></td>
              </tr>
            <% end %>
        <% else %>
          <P>There are no users.</P>
        <% end %>
          </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= render 'layouts/footer' %>
  </div>
</div>

<!-- エンドユーザー側のフォローしているユーザー一覧 -->
<div class="container">
  <div class="row">
    <div class="col-sm-8">
    <h3>Follows Users</h3>
      <table class="table table-hover table-bordered">
        <% if @end_users.exists? %>
          <thead>
            <tr>
              <th></th>
              <th>User Name</th>
              <th colspan="3">introduction</th>
            </tr>
          </thead>
          <tbody>
            <% @end_users.each do |end_user| %>
              <tr>
                <td class="align-middle text-center"><%= attachment_image_tag(end_user, :profile_image, size: '60x60', fallback: "no-image-icon.jpg") %></td>
                <td class="align-middle"><%= link_to end_user.name, end_user_path(end_user) %></td>
                <td class="align-middle"><%= end_user.introduction %></td>
              </tr>
            <% end %>
        <% else %>
          <h5 class="text-center mt-5">There are no users.</h5>
        <% end %>
          </tbody>
      </table>
    </div>
    <div class="col-sm-3">
      <%= render 'render/sidebar', end_user: @current_end_user, tags: @tags %>
    </div>
  </div>
</div>

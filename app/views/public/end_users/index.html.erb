<div class="container">
  <div class="row">
    <%= render 'layouts/header' %>
  </div>
  <div class="row">
    <div class="col-sm-7">
      <table class="table table-hover table^bordered">
        <thead class="thead-ligth">
          <tr>
            <th>User ID</th>
            <th></th>
            <th>User Name</th>
            <th>Introduction</th>
          </tr>
        </thead>
        <tbody>
          <% @end_users.each do |end_user| %>
          <tr>
            <td><%= end_user.id %></td>
            <% link_to end_user_path(end_user) do %>
              <td><%= attachment_image_tag(end_user, :profile_image, size: '60x60', fallback: "no-image-icon.jpg") %></td>
              <td><%= end_user.name %></td>
            <% end %>
            <td><%= end_user.introduction %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <%= render 'layouts/footer' %>
  </div>

  </div>
</div>
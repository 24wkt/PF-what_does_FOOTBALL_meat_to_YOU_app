<!-- エンドユーザー側のトップページ -->
<div class="container">
  <div class="row">
    <%= render 'layouts/header' %>
  </div>
  <div class="row">
    <h3>User Edit</h3>
  </div>
  <div class="row mx-auto">
    <div class="col-sm-12 mx-auto">
      <%= form_with model: @end_user, local: true do |f| %>
        <!--< render 'layouts/errors', obj: @end_user -->
      <div class="form-group">
        <%= f.label :image %>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group">
        <%= f.submit "Updaate!!", class: "btn btn-sm btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= render 'layouts/footer' %>
  </div>
</div>

<div class="jumbotron">
  <div class="container">
    <div class="row pb-5">
      <div class="col-sm-12">
        <%= render 'render/frontmenu' %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 text-center mb-3">
        <h1 class="pege-heading">User Login</h1>
        <% if flash[:danger] %>
          <p class= "message-danger"><%= flash[:dander] %></p>
        <% end %>
      </div>
    </div>

    <%= form_with model: @end_user, url:end_user_session_path, local:true do |f| %>
      <% if @end_user.errors.any? %>
      <% end %>


    <div class="row field">
      <div class="col-sm-6 field text-center">
        <%= f.label :email, class: "form-item" %>
        <% if @end_user.errors.include?(:email) %>
          <P class="errors"><%= @end_user.errors.full_messages_for(:email).first %></P>
        <% end %>
      </div>
      <div class="col-sm-6 field text-center">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-3" %>
      </div>
    </div>

    <div class="row field">
      <div class="col-sm-6 field text-center">
        <%= f.label :password, class: "form-item" %>
        <% if @end_user.errors.include?(:password) %>
          <P class="errors"><%= @end_user.errors.full_messages_for(:password).first %></P>
        <% end %>
      </div>
      <div class="col-sm-6 field text-center">
        <%= f.password_field :password, autocomplete: "current-password", class: "mb-3" %>
      </div>
    </div>

    <div class="row actions mt-2">
      <div class="col-sm-12 text-center">
        <%= f.submit "Log in", class: "btn btn-lg btn-success mt-2" %>
      </div>
    </div>

    <div class="row field">
      <% if devise_mapping.rememberable? %>
        <div class="col-sm-12 field text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-item" %>
        </div>
      <% end %>
    </div>
    <% end %>

    <div class="row">
      <div class="col-sm-12 text-center mt-1">
        <%= link_to "Back", root_path, class: "link" %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 text-center">
        <%= link_to "管理者はこちら", new_admin_session_path, class: "btn btn-sm btn-secondary" %>
      </div>
    </div>
  </div>
</div>
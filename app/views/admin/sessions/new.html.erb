<div class="jumbotron">
  <div class="container">
    <div class="row pb-5">
      <div class="col-sm-12">
        <%= render 'render/frontmenu' %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 text-center mb-3">
        <h1 class="pege-heading">Admin Login</h2>
        <div class="alert text-center">
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, class: "#{key}") %>
          <% end %>
        </div>
      </div>
    </div>

    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

    <div class="row field">
      <div class="col-sm-6 field text-center">
        <%= f.label :email, class: "form-item" %>
      </div>
      <div class="col-sm-6 field text-center">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-3" %>
      </div>
    </div>

    <div class="row field">
      <div class="col-sm-6 field text-center">
        <%= f.label :password, class: "form-item" %>
      </div>
      <div class="col-sm-6 field text-center">
        <%= f.password_field :password, autocomplete: "current-password", class: "mb-3" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="row field">
        <div class="col-sm-12 text-center">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-item" %>
        </div>
      </div>
    <% end %>

      <div class="row actions">
        <div class="col-sm-12 text-center">
          <%= f.submit "Log in", class: "btn btn-lg btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
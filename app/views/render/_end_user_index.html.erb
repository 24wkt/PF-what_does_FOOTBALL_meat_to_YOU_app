<table class="table table-hover table^bordered">
  <thead class="thead-ligth">
    <tr>
      <th>User ID</th>
      <th>User Name</th>
      <th>Introduction</th>
    </tr>
  </thead>
  <tbody>
    <% end_users.each do |end_user| %>
      <tr>
        <td><%= end_user.id %></td>
        <td>
          <%= link_to end_user_path(end_user) do %>
            <%= attachment_image_tag(end_user, :profile_image, size: '60x60', fallback: "no-image-icon.jpg") %>
            <%= end_user.name %>
          <% end %>
        </td>
        <td><%= end_user.introduction %></td>
      </tr>
    <% end %>
  </tbody>
</table>